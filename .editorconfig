# NOT USED FOR THIS PROJECT 
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# HTML, CSS and JS files 
[*.{html, css, js}]
indent_style = space
indent_size = 2
max_line_length = 120
charset = utf-8

# SASS specifically files 
[*.scss]
indent_style = space
indent_size = 4
max_line_length = 120
charset = utf-8

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 4
